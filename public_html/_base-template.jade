doctype html

html(lang='en') 

	head
		
		block title
			title Sugar Craft

		//- set the rootpath
		//- base(href='http://www.jonathink.com/sugarcraft/') 

		//- sets the character encoding for HTML docs. utf-8 is pretty standard.
		meta(charset='utf-8')

		//- to match the screen's width in device independent pixels and establishes a 1:1 relationship between CSS pixels and device independent pixels
		meta(name='viewport' content='width=device-width, initial-scale=1')

		link(href='css/main.css' rel='stylesheet' type='text/css')

		//- web font include here
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:700,300,400' rel='stylesheet' type='text/css')
		link(href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic' rel='stylesheet' type='text/css')

	body
		.header-wrapper
			header.l-basic
				//- logo and nav
				div(id='logo')
					img(src='image/logo-small.png' alt='logo')

				a.go-to-nav Menu
				nav
					ul
						block current-page
						li: a(href='index.html' class=home ? 'current' : '') Home
						li: a(href='products.html' class=products ? 'current' : '') Products
						li: a(href='news.html' class=news ? 'current' : '') News & Creations
						li: a(href='about.html' class=about ? 'current' : '') About
						li: a(href='#' class='login-button') Log in / Sign up
						li: a.shopping-cart(href='#') Cart 
				a.shopping-cart(href='#') Cart

		.content
			block content

		.footer-wrapper
			footer.l-basic
				p
					span Connect with us!
					span.contact-links
						img(src='image/email.png' class='contact-logo')
						img(src='image/facebook.png' class='contact-logo')
						img(src='image/twitter.png' class='contact-logo')
					span.copyright Copyright Â© SugarCraft 2015

		//- include scripts here
		script(src='js/jquery-2.1.3.min.js' type='text/javascript')
		script(src='js/jquery-2.1.3.min.js' type='text/javascript')
		script(src='js/masonry.pkgd.min.js' type='text/javascript')
		script(src='js/script-min.js' type='text/javascript')