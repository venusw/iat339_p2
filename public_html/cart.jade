block current-page
	//- sets the active page in the main navigation
	- var products = true

mixin page_title
	| 12 Pack of Macarons Order Form

block title
	title Sugar Craft â€“ 
		+page_title

block content
	//- content goes here
	h1 Order Details

	form.order-form(method='link' action='checkout.html')

		ul.list-header
			li Quantity
			li Price
		ul.order-list
			li
				.item-row
					p.item-title Large Box of Macarons - Matcha Frappe
				.item-row 
					span.item-delete Remove
					span.item-price Price: $22
					div.item-quantity
						span Qty:
						input(type='number' class='quantity' value='2' min='0')
					span.item-total Total: $44
			li
				.item-row
					p.item-title Large Box of Macarons - Vanilla Bean
				.item-row
					span.item-delete Remove
					span.item-price Price: $22
					div.item-quantity
						span Qty:
						input(type='number' class='quantity' value='3' min='0')
					span.item-total Total: $66

		p.order-total Subtotal (5 items): $110
		
		.next-step
			input(type='submit' value='Checkout')
